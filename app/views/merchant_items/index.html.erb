<% @items.each do |item| %>
  <h2><%= link_to item.name, "/items/#{item.id}" %></h2>
  <p>$<%= item.price %></p>
  <%= image_tag "#{item.image}", class:"img-thumbnail" %>
  <p><%= item.description %></p>
  <% if item.active %>
    <p>In Stock</p>
  <% else %>
    <p>Out of Stock </p>
  <% end %>
  <p><%= item.inventory %></p>
<% end %>
<br>
<%= link_to 'New Item', "/merchants/#{@merchant.id}/items/new" %>
