<h1>Items</h1>
<br>
<% @items.each do |item| %>
  <section class="item">
    <%= link_to item.name, "/items/#{item.id}" %><br>
    <%= image_tag ("#{item.image}") %>
    <p><%= item.description %></p>
    <p>$<%= item.price %></p>
    <% if item.active %>
      <p>In Stock</p>
    <% else %>
      <p>Out of Stock </p>
    <% end %>
    <p>Inventory: <%= item.inventory %></p>
    <p>Merchant: <%= link_to item.merchant.name, "/merchants/#{item.merchant.id}" %></p>
  </section>
<% end %>
